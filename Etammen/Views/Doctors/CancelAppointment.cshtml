@using Etammen.ViewModels
@model AppointmentViewModel

@{
    ViewData["Title"] = "CancelAppointment";
}

<h1>CancelAppointment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clinic.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clinic.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.Id)
        </dd>
        <dt class="col-sm-2">
            Doctor Name
        </dt>
        <dd class="col-sm-10">
           DR. @Html.DisplayFor(model => model.Clinic.Doctor.ApplicationUser.FirstName) @Html.DisplayFor(model => model.Clinic.Doctor.ApplicationUser.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReservtionPeriodNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservtionPeriodNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAttended)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAttended)
        </dd>
    </dl>
    
    <form asp-action="CancelAppointment">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </form>
</div>
